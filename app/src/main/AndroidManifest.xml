<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mycompany.smartelectricitymonitor">

    <application
        android:allowBackup="true"
        android:icon="@drawable/energy_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/energy_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".DomesticUserActivity"
            android:label="@string/title_activity_domestic_user" />
        <activity
            android:name=".IndustrialUserActivity"
            android:label="Industrial User" />
        <activity android:name=".UserRegistrationActivity" />
        <activity android:name=".StartActivity"/>

    </application>

</manifest>