<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="mycompany.smartelectricitymonitor">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_green_electricity"
        android:label="@string/app_name"
        android:roundIcon="@drawable/energy_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DomesticUserActivity"
            android:label="@string/title_activity_domestic_user" />
        <activity
            android:name=".IndustrialUserActivity"
            android:label="Industrial User" />
        <activity
            android:name=".UserRegistrationActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".StartActivity" />
        <activity android:name=".DeviceDetailsActivity"></activity>
    </application>

</manifest>